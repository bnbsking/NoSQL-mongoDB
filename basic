#!bin/mongo.exe
show dbs
use myDB
db.stats()
db.dropDatabase()

db.createCollection('myCo', {capped:true, size:6142800, max:10000})
db.getCollectionNames(); show collections
db.myCo.drop()
db.myCo.renameCollection('myCo2')

db.myCo.insert({'name':'bobo'})
db.myCo.insert([ {'a':1,'b':2}, {'c':3} ])
